{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <main class="max-w-6xl mx-auto space-y-6 text-white ">
        <article class="max-w-4xl mx-auto lg:grid lg:grid-cols-12 gap-x-10">
            <div class="col-span-4 mb-10 lg:text-center lg:pt-14">
                <img src="{{ asset('images/posts/' ~ post.image)}}" alt="Image" class="rounded">

                {# <p class="block mt-4 text-xs text-gray-400">
                    Published <time>{{ post.createdAt }}</time>
                </p> #}

                <div class="flex items-center mt-4 text-sm lg:justify-center">
                    <img src="https://i.pravatar.cc/150?u={{ post.user.id }}" class="w-10 h-10 rounded" alt="Lary avatar">
                    <div class="ml-3 text-left">
                        <a href="/?author={{ post.user.email }}">
                            <h5 class="font-bold">{{ post.user.email }}</h5>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-span-8">
                <div class="justify-between hidden mb-6 lg:flex">
                    <a href="/home"
                        class="relative inline-flex items-center text-lg text-orange-400 transition-colors duration-300 hover:underline">
                        <svg width="22" height="22" viewBox="0 0 22 22" class="mr-2">
                            <g fill="none" fill-rule="evenodd">
                                <path stroke="#000" stroke-opacity=".012" stroke-width=".5" d="M21 1v20.16H.84V1z">
                                </path>
                                <path class="fill-current"
                                    d="M13.854 7.224l-3.847 3.856 3.847 3.856-1.184 1.184-5.04-5.04 5.04-5.04z">
                                </path>
                            </g>
                        </svg>

                        Back to Posts
                    </a>

                    <div class="space-x-2">
                        <x-category-button :category="$post->category" />
                    </div>
                </div>

                <h1 class="mb-10 text-3xl font-bold lg:text-4xl">
                    {{ post.title }}
                </h1>

                <div class="space-y-4 leading-loose lg:text-lg">
                    {{ post.content }}
                </div>
            </div>

        </article>

    </main>
{% endblock %}